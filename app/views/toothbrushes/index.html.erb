<div class="container">
  <div class="title text-center">
    <h1>Get your dream toothbrush</h1>
  </div>
  <div class="listing">
    <% @toothbrushes.each do |toothbrush| %>
  <div class="col-xs-12 col-sm-3">
  <div class="card-index" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= cl_image_path toothbrush.photo %>');">
  <div class="card-category"><%= toothbrush.material %></div>
  <div class="card-description">
    <h2><%= toothbrush.name %></h2>
    <p><%= toothbrush.price %> EUROS</p>
  </div>
  <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
  <a class="card-link" href="#" ></a>
</div>
</div>
  <% end %>
  </div>
</div>
