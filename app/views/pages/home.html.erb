 <%= render "layouts/header" %>
 <div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-7">
      <div class="home-intro-text-left">
      <h2>Check out our latest rentals</h2>
        </div>
      <div class="container-home-left">
        <% @toothbrushes.each do |toothbrush| %>
        <div class="col-xs-12 col-sm-6">
          <div class="card" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path toothbrush.photo %>');">
            <div class="card-category"><%= toothbrush.material %></div>
            <div class="card-description">
              <h2><%= toothbrush.name %></h2>
              <p><%= toothbrush.price %> EUROS</p>
            </div>
            <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
            <a class="card-link" href="#" ></a>
          </div>
        </div>
        <% end %>
      </div>
    </div>
    <div class="col-xs-12 col-sm-5">
       <div class="home-intro-text-right">
      <h2>What people think about us</h1>
        </div>
      <div class="container-home-right">
        <%= render "layouts/reviews" %>
      </div>
    </div>
  </div>
</div>
</div>






