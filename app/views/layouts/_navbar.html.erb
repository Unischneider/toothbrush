<div class="navbar-wagon">
  <!-- Logo -->
  <div class="search-box">
    <i class="icon fas fa-search"></i>
    <div class="search-field">
      <%= form_tag toothbrushes_path, class: "search-field", method: :get do %>
      <%= text_field_tag :query,
      params[:query],
      class: "form-control",
        placeholder: "Search"
        %>
        <button class="btn btn-search" type="submit"><i class="fas fa-arrow-right"></i></button>


        <% end %>

      </div>
    </div>
    <div class="center-logo">
      <a href="/" class="navbar-wagon-brand">
        <img src="<%= asset_path("logo.png")%>" alt="">
      </a>
    </div>
    <!-- Right Navigation -->
    <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Profile picture with dropdown list -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <div class="welcome-message">
         <% if user_signed_in? %>
         <p>Hello:<strong class="email-welcome"><%= current_user.first_name %></strong></p>
        </div>
          <% if current_user.photo.file.nil? %>
            <%= cl_image_tag"qzmh948aubfmyztoffra", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", data:{toggle: "dropdown"}%>
          <% else %
            <%= cl_image_path current_user.photo, class: "avatar dropdown-toggle", id:"navbar-wagon-menu", data:{toggle:"dropdown"}%>
          <% end %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">

          <li><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %></li>
          <li><%= link_to "Update your profile", edit_user_path(current_user) %></li>
          <li><%= link_to "My Profile", user_path(current_user) %></li>
          <li><%= link_to "My Bookings", my_bookings_path %></li>
          <li><%= link_to "My Toothbrushes", my_toothbrushes_path %></li>
          <li><%= link_to "My Rentals", bookings_path %></li>
          <% else %>
          <a class="btn btn-login dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
            Sign In
          </a>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li><%= link_to "Sign in" , new_user_session_path %></li>
            <li><%= link_to "Sign up" , new_user_registration_path %></li>
          </ul>
        <% end %>
        </div>
      </div>
    </div>

    <!-- Dropdown appearing on mobile only -->
    <div class="navbar-wagon-item hidden-md hidden-lg">
      <div class="dropdown">
        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><a href="#">Rent</a></li>
          <li><a href="#">About</a></li>
          <li><a href="#">Reviews</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>
