
<div class="container">
  <div class="box-devise">
    <div class="row">
      <div class="col-xs-8 col-xs-offset-2">
        <h2>Log in</h2>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-8 col-xs-offset-2">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true , class: "form-control"%>
          <%= f.input :password, required: false , class: "form-control"%>
          <%= f.input :remember_me, class: "form-control", as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions text-center">
          <%= f.button :submit, "Log in" , class: "btn btn-custom"%>
        </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
